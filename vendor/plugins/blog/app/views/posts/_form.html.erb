<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :site_id %><br />
    <%=raw f.select :site_id, @sites %>
  </div>
  <div class="field">
    <%= f.label :language %><br />
    <%=raw f.select :language, [[:Russian, :ru], [:English, :en]] %>
  </div>
  <div class="field">
    <%= f.label :author_id %><br />
    <%=raw f.select :author_id, @users %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :slug %><br />
    <%= f.text_field :slug %>
  </div>
  <div class="field">
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </div>
  <div class="field">
    <%= f.label :render_method %><br />
    <%= f.text_field :render_method %>
  </div>
  <div class="field">
    <%= f.label :html %><br />
    <%= f.text_area :html %>
  </div>
  <div class="field">
    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
    <%= f.label :upd_date %><br />
    <%= f.datetime_select :upd_date %>
  </div>
  <div class="field">
    <%= f.label :is_draft %><br />
    <%= f.check_box :is_draft %>
  </div>
  <div class="field">
    <%= f.label :enable_comments %><br />
    <%= f.check_box :enable_comments %>
  </div>
  <div class="field">
    <%= f.label :tags %><br />
    <%= f.text_field :tags %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
