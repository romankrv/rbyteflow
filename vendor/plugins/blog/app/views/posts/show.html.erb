<p id="notice"><%= notice %></p>

<h1><%= @post.name %></h1>
<div><%= raw @post.html %></div>

<div><b>Author:</b> <%= @post.author.username %></div>
<div><b>Date:</b> <%= @post.date %></div>
<div><b>Upd date:</b> <%= @post.upd_date %></div>
<div><b>Tags:</b> <%= @post.tags %></div>

<h2>Comments</h2>
<% CommentNode.tree_for_object(@post).each do |comment| %>
  <div style="margin-left: <%= comment.level*30 %>px;">
    <%= raw comment.body_html %>
    <%= comment.user.username %>
  </div>
<% end %>

<h2>Add a comment:</h2>
<%= render 'comment_nodes/form' %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
